{
  "servers": [
    {
      "id": "microsoft-docs",
      "type": "http",
      "label": "Microsoft Docs MCP Server",
      "description": "Microsoft Docs/Learn MCP server.",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    {
      "id": "echo-server",
      "type": "docker",
      "label": "Echo MCP Server",
      "description": "Local HTTP echo server (Docker).",
      "image": "ealen/echo-server:latest",
      "ports": ["8081:80"],
      "restart": "no",
      "rm": true
    },
    {
      "id": "duckduckgo-server",
      "type": "docker",
      "label": "DuckDuckGo MCP Server",
      "description": "DuckDuckGo MCP server for search.",
      "image": "mcp/duckduckgo",
      "ports": ["8084:8080"],
      "restart": "no",
      "rm": true
    },
    {
      "id": "git-server",
      "type": "docker",
      "label": "Git MCP Server",
      "description": "Git MCP server for repo operations (HTTP API on 8080).",
      "image": "mcp/git",
      "ports": ["8085:8080"],
      "restart": "no",
      "rm": true,
      "protocol": "http",
      "mounts": [
        {
          "type": "bind",
          "source": "C:/Dev/Project/gopq",
          "target": "/workspace"
        }
      ]
    }
  ]
}
