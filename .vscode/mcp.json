{
  "servers": {
    "microsoft-docs": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "time": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "--name",
        "mcp-time-server",
        "-i",
        "--rm",
        "mcp/time"
      ]
    },
    "echo": {
      "type": "stdio", // This is a plain HTTP server; it doesn't implement MCP API, so we use stdio.
      "command": "docker",
      "args": [
        "run",
        "--name",
        "mcp-echo-server",
        "-p",
        "8081:80",
        "-i",
        "--rm",
        "ealen/echo-server:latest"
      ]
    },
    "duckduckgo": {
     "type": "stdio",
     "command": "docker",
      "args": [
        "run",
        "--name",
        "mcp-duckduckgo-server",
        "-i",
        "--rm",
        "mcp/duckduckgo"
      ]
    }
  }
}