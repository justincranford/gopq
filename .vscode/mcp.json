{
  "servers": {
    "github": {
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "git-local": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "microsoft-docs": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "time": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "--name",
        "mcp-time-server",
        "-i",
        "--rm",
        "mcp/time"
      ]
    },
    "echo": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "--name",
        "mcp-echo-server",
        "-p",
        "8081:80",
        "-i",
        "--rm",
        "ealen/echo-server:latest"
      ]
    },
    "duckduckgo": {
     "type": "stdio",
     "command": "docker",
      "args": [
        "run",
        "--name",
        "mcp-duckduckgo-server",
        "-i",
        "--rm",
        "mcp/duckduckgo"
      ]
    }
  }
}